@model OpenQMS.Models.Process

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var products = (List<Product>)ViewData["Products"];
}

<h1>Edit</h1>

<h4>Process</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProcessId" />
            <input type="hidden" asp-for="GeneratedFrom" value="@Model.GeneratedFrom" />
            <input type="hidden" asp-for="Version" />
            <input type="hidden" asp-for="EditedBy" value="@Model.EditedBy" />
            <input type="hidden" asp-for="EditedOn" value="@Model.EditedOn" />
            <input type="hidden" asp-for="ApprovedBy" value="@Model.ApprovedBy" />
            <input type="hidden" asp-for="ApprovedOn" value="@Model.ApprovedOn" />
            <input type="hidden" asp-for="IsLocked" value="@Model.IsLocked" />
            <input type="hidden" asp-for="Status" value="@Model.Status" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Product</label>
                <select asp-for="ProductId" class="form-control" asp-items='new SelectList(products,"Id","Name")'>
                    <option value="">--Select Product--</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
