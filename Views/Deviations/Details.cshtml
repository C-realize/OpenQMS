@model OpenQMS.Models.Deviation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Deviation</h4>
<hr />
<div>
    <dl class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger col-sm-12"></div>
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeviationId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @if (Model.Product != null)
            {
                <a href="/Products/Details/@Model.ProductId">@Model.Product.Name</a>
            }
        </dd>
        <dt class="col-sm-2">
            Process
        </dt>
        <dd class="col-sm-10">
            @if (Model.Process != null)
            {
                <a href="/Processes/Details/@Model.ProcessId">@Model.Process.Name</a>
            }
        </dd>
        <dt class="col-sm-2">
            Asset
        </dt>
        <dd class="col-sm-10">
            @if (Model.Asset != null)
            {
                <a href="/Assets/Details/@Model.AssetId">@Model.Asset.Name</a>
            }
        </dd>
        <dt class="col-sm-2">
            Material
        </dt>
        <dd class="col-sm-10">
            @if (Model.Material != null)
            {
                <a href="/Materials/Details/@Model.MaterialId">@Model.Material.Name</a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identification)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identification)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentifiedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentifiedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentifiedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Evaluation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evaluation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EvaluatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EvaluatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcceptedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcceptedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcceptedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcceptedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resolution)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resolution)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResolvedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResolvedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResolvedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResolvedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApprovedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApprovedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <a type="button" class="col-sm-2 btn-pill btn btn-outline-primary" asp-action="ExportDetailInCSV" asp-route-id="@Model.Id">Export CSV</a>
    <a type="button" class="ncol-sm-2 btn-pill btn btn-outline-primary" asp-action="ExportDeviationDetail" asp-route-id="@Model.Id">Export PDF</a>

    <br />
    <br />
    <h2>CAPA</h2>
    <div class="row">
        <table class="table table-border">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Capas)
                {
                    <tr>
                        <td>
                            <a href="/Capas/Details/@item.Id">@item.CapaId</a>
                        </td>
                        <td>@item.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <br />
    <input type="hidden" id="DeviationId" value="@Model.Id" />
    @if (User.IsInRole(Constants.AdministratorsRole) || User.IsInRole(Constants.ManagersRole))
    {
        @if (Model.Status == OpenQMS.Models.Deviation.DeviationStatus.Evaluation || Model.Status == OpenQMS.Models.Deviation.DeviationStatus.Resolution)
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="InputEmail" id="InputEmail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="InputPassword" id="InputPassword" class="form-control" />
                    </div>
                </div>
            </div>
        }
        @if (Model.Status == OpenQMS.Models.Deviation.DeviationStatus.Evaluation)
        {
            <br />
            <button class="btn btn-success" id="btnAccepted">Accept</button>
        }
        else if (Model.Status == OpenQMS.Models.Deviation.DeviationStatus.Resolution)
        {
            <br />
            <button class="btn btn-success" id="btnApproved">Approve</button>
        }
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <span>|</span>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    <script>
        $('#btnAccepted').click(function () {

            window.location.href = '/Deviations/Accepted?id=' + $('#DeviationId').val() + '&email=' + $('#InputEmail').val() + '&pwd=' + $('#InputPassword').val();
        });
        $('#btnApproved').click(function () {

            window.location.href = '/Deviations/Approved?id=' + $('#DeviationId').val() + '&email=' + $('#InputEmail').val() + '&pwd=' + $('#InputPassword').val();
        });
    </script>
}
