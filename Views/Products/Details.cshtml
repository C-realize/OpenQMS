@model OpenQMS.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <h2>
                @Model.Name
            </h2>
        </div>
    </div>
    <div class="page-title-subheading opacity-10">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a>
                        <i aria-hidden="true" class="fa fa-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Index">Products List</a>
                </li>
                <li class="active breadcrumb-item" aria-current="page">
                    <a asp-action="Details" asp-route-id="@Model.Id">Product Details</a>
                </li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <ul class="nav nav-tabs z_nav">
                    <li class="nav-item">
                        <a role="tab" class="nav-link Detail_tabs active show" id="tab-0" data-toggle="tab" href="#tab-content-0">
                            <span>Product Info</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a role="tab" class="nav-link Detail_tabs" id="tab-1" data-toggle="tab" href="#tab-content-1">
                            <span>Changes</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a role="tab" class="nav-link Detail_tabs" id="tab-2" data-toggle="tab" href="#tab-content-2">
                            <span>Deviation</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a role="tab" class="nav-link Detail_tabs" id="tab-3" data-toggle="tab" href="#tab-content-3">
                            <span>Capa</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane tabs-animation fade  active show" id="tab-content-0" role="tabpanel">
                    <div class="card-body" style="padding-top: 0px;">
                        <div class="row">
                            <div class="col-12 Details">
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Name):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Name)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Version):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Version)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Description):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Description)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Status):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Status)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.EditedBy):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.EditedByUser.UserName)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.EditedOn):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.EditedOn)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.ApprovedBy):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.ApprovedByUser.UserName)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.ApprovedOn):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.ApprovedOn)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                    </div>
                                    <div class="col d-flex">
                                        <a class="nav-link mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                    @if ((User.IsInRole(Constants.AdministratorsRole) || User.IsInRole(Constants.ManagersRole)) && Model.Status == OpenQMS.Models.Product.ProductStatus.Draft)
                                    {
                                        <form style="display:inline;" method="post">
                                            <input type="hidden" asp-for="Id" />
                                            <input type="hidden" asp-for="Name" />
                                            <input type="hidden" asp-for="Description" />
                                            <input type="hidden" asp-for="Version" />
                                            <input type="hidden" asp-for="EditedBy" />
                                            <input type="hidden" asp-for="EditedOn" />
                                            <input type="hidden" asp-for="Status" />
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input type="email" name="InputEmail" id="InputEmail" class="form-control" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <input type="password" name="InputPassword" id="InputPassword" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <button type="submit" class="btn btn-success">Approved</button>
                                        </form>
                                    }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane tabs-animation fade" id="tab-content-1" role="tabpanel">
                    <div class="card-body">
                        <h5 class="font-weight-bold">Changes List</h5>
                        <table style="width: 100%;" class="table table-hover table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Proposal</th>
                                    <th>Assessment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Changes != null)
                                {
                                    foreach (var item in Model.Changes)
                                    {
                                        <tr>
                                            <td><a href="/Changes/Details/@item.Id">@item.Title</a></td>
                                            <td>@item.Proposal</td>
                                            <td>@item.Assessment</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane tabs-animation fade" id="tab-content-2" role="tabpanel">
                    <div class="card-body">
                        <h5 class="font-weight-bold">Deviations List</h5>
                        <table style="width: 100%;" class="table table-hover table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Evaluation</th>
                                    <th>Resolution</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Deviation != null)
                                {
                                    foreach (var item in Model.Deviation)
                                    {
                                        <tr>
                                            <td><a href="/Deviations/Details/@item.Id">@item.Title</a></td>
                                            <td>@item.Evaluation</td>
                                            <td>@item.Resolution</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane tabs-animation fade" id="tab-content-3" role="tabpanel">
                    <div class="card-body">
                        <h5 class="font-weight-bold">CAPA List</h5>
                        <table style="width: 100%;" class="table table-hover table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>CorrectiveAction</th>
                                    <th>PreventiveAction</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Capa != null)
                                {
                                    foreach (var item in Model.Capa)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/Capas/Details/@item.Id">@item.Title</a>
                                            </td>
                                            <td>@item.CorrectiveAction</td>
                                            <td>@item.PreventiveAction</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>