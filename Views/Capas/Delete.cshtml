@model OpenQMS.Models.Capa

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>CAPA</h4>
<hr />
<h5 style="color:red;">Are you sure you want to delete this?</h5>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CapaId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CapaId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @if (Model.Product != null)
            {
                <a href="/Products/Details/@Model.ProductId">@Model.Product.Name</a>
            }
            else
            {
                <a>-</a>
            }
        </dd>
        <dt class="col-sm-2">
            Process
        </dt>
        <dd class="col-sm-10">
            @if (Model.Process != null)
            {
                <a href="/Processes/Details/@Model.ProcessId">@Model.Process.Name</a>
            }
            else
            {
                <a>-</a>
            }
        </dd>
        <dt class="col-sm-2">
            Asset
        </dt>
        <dd class="col-sm-10">
            @if (Model.Asset != null)
            {
                <a href="/Assets/Details/@Model.AssetId">@Model.Asset.Name</a>
            }
            else
            {
                <a>-</a>
            }
        </dd>
        <dt class="col-sm-2">
            Material
        </dt>
        <dd class="col-sm-10">
            @if (Model.Material != null)
            {
                <a href="/Materials/Details/@Model.MaterialId">@Model.Material.Name</a>
            }
            else
            {
                <a>-</a>
            }
        </dd>
        <dt class="col-sm-2">
            Deviation
        </dt>
        <dd class="col-sm-10">
            @if (Model.Deviation != null)
            {
                <a href="/Deviations/Details/@Model.DeviationId">@Model.Deviation.Title</a>
            }
            else
            {
                <a>-</a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CorrectiveAction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorrectiveAction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PreventiveAction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreventiveAction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeterminedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeterminedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeterminedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeterminedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assessment)
        </dt>
        <dd class="col-sm-10">
            @(Model.Assessment ?? "-")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssessedBy)
        </dt>
        <dd class="col-sm-10">
            @(Model.AssessedBy ?? "-")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssessedOn)
        </dt>
        <dd class="col-sm-10">
            @(Model.AssessedOn.HasValue ? Model.AssessedOn : "-")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <br />
    <h4>Changes</h4>
    <div class="row">
        <table class="table table-border">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Changes)
                {
                    <tr>
                        <td>
                            <a href="/Changes/Details/@item.Id">@item.ChangeId</a>
                        </td>
                        <td>@item.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
