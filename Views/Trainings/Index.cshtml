@model IEnumerable<OpenQMS.Models.Training>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts 
{
    <script>
        $(document).ready(function () {

            var table = $('#example7').DataTable({
                "columns": [
                    null,
                    null,
                    null,
                    { "visible": false },
                    { "visible": false },
                    null,
                    null
                ],
                paging: true,
                orderCellsTop: true,
                dom: 'lBfrtip',
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "order": [[0, 'asc']],
                displayLength: 10,
                buttons: [
                    'colvis',
                    {
                        extend: 'pdf',
                        footer: false,
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    {
                        extend: 'excel',
                        footer: false,
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    }
                ],
            });
        });
    </script>
}

<h1>Index</h1>

<h4>Trainings</h4>
<hr />

<table id="example7" class="table" style="width: 100%;">
    <thead>
        <tr>
            <th>
                Training Id
            </th>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Policy
            </th>
            <th>
                Trainer
            </th>
            <th>
                Status
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PolicyTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainerEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if ((User.IsInRole(Constants.ManagersRole) || User.IsInRole(Constants.AdministratorsRole)) && item.Status != Training.TrainingStatus.Completed)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <text> | </text>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if ((User.IsInRole(Constants.ManagersRole) || User.IsInRole(Constants.AdministratorsRole)) && item.Status != Training.TrainingStatus.Completed)
                    {
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if(User.IsInRole(Constants.ManagersRole) || User.IsInRole(Constants.AdministratorsRole))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
