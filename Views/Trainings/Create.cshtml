@using Microsoft.AspNetCore.Identity
@model OpenQMS.Models.Training

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var policies = (List<AppDocument>)ViewData["Policies"];
    var trainer = (List<AppUser>)ViewData["Trainer"];
    var roles = (List<AppRole>)ViewData["Roles"];
}

<h1>Create</h1>

<h4>Training</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PolicyTitle" value="X" />
            <input type="hidden" asp-for="TrainerEmail" value="X" />
            <input type="hidden" asp-for="Trainees" value="X" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Policy</label>
                <select asp-for="PolicyId" class="form-control" asp-items='new SelectList(policies,"Id","Title")'>
                    <option value="">--Select Policy--</option>
                </select>
                <span asp-validation-for="PolicyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Trainer</label>
                <select asp-for="TrainerId" class="form-control" asp-items='new SelectList(trainer,"Id","Email")'>
                    <option value="">--Select Trainer--</option>
                </select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Role</label>
                <select name="roles" class="form-control" asp-items='new SelectList(roles,"Name","Name")'>
                    <option value="">--Select Role--</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
