@model OpenQMS.Models.AppDocument

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <h2>
                Document
            </h2>
        </div>
    </div>
    <div class="page-title-subheading opacity-10">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a>
                        <i aria-hidden="true" class="fa fa-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Index">Documents List</a>
                </li>
                <li class="active breadcrumb-item" aria-current="page">
                    <a asp-action="Details" asp-route-id="@Model.Id">Document Details</a>
                </li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <ul class="nav nav-tabs z_nav">
                    <li class="nav-item">
                        <a role="tab" class="nav-link Detail_tabs active show" id="tab-0" data-toggle="tab" href="#tab-content-0">
                            <span>Document Info</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane tabs-animation fade  active show" id="tab-content-0" role="tabpanel">
                    <div class="card-body" style="padding-top: 0px;">
                        <div class="row">
                            <div class="col-12 Details">
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Title):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Title)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Version):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Version)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Description):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Description)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.Status):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Status)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">Authored By:</p>
                                        <p>
                                            @Html.DisplayFor(model => model.AuthoredBy)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">Authored On:</p>
                                        <p>
                                            @Html.DisplayFor(model => model.AuthoredOn)
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.ApprovedBy):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.ApprovedBy)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">@Html.DisplayNameFor(model => model.ApprovedOn):</p>
                                        <p>
                                            @Html.DisplayFor(model => model.ApprovedOn)
                                        </p>
                                    </div>
                                </div>
                                <div class="row" @*style="margin-bottom: 20px;"*@>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">File Path:</p>
                                        <p>
                                            @Html.DisplayFor(model => model.FilePath)
                                        </p>
                                    </div>
                                    <div class="col d-flex">
                                        <p style="font-weight: bold;">File:</p>
                                        <a type="button" class="btn btn-primary" asp-action="DownloadFile" asp-route-id="@Model.Id">Download</a>
                                    </div>
                                </div>
                                @if ((await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.Update)).Succeeded)
                                {
                                    <div class="row">
                                        <div class="col d-flex">
                                        </div>
                                        <div class="col d-flex">
                                            <a class="nav-link mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                                        </div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-md-4">
                                        @if (Model.Status != AppDocument.DocumentStatus.Approved)
                                        {
                                            @if ((await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.Approve)).Succeeded)
                                            {
                                                <form style="display:inline;" method="post">
                                                    <input type="hidden" name="id" value="@Model.Id" />
                                                    <input type="hidden" name="title" value="@Model.Title" />
                                                    <input type="hidden" name="status" value="Approved" />
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input type="email" name="InputEmail" class="form-control" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <input type="password" name="InputPassword" class="form-control" />
                                                    </div>
                                                    <button type="submit" class="btn btn-success">Approve</button>
                                                </form>
                                            }
                                        }
                                        @if ((Model.Status != AppDocument.DocumentStatus.Approved) && (Model.Status != AppDocument.DocumentStatus.Rejected))
                                        {
                                            @if ((await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.Reject)).Succeeded)
                                            {
                                                <form style="display:inline;" method="post">
                                                    <input type="hidden" name="id" value="@Model.Id" />
                                                    <input type="hidden" name="title" value="@Model.Title" />
                                                    <input type="hidden" name="status" value="Rejected" />
                                                    <button type="submit" class="btn btn-danger">Reject</button>
                                                </form>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>